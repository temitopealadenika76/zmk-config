if SHIELD_SK8KEY

config ZMK_KEYBOARD_SK8KEY
    default "sk8key"

config ZMK_RGB_BACKLIGHT
    bool "Enable RGB Backlight"
    default y

config LED_STRIP
    bool "Enable LED Strip Support"
    default y

config WS2812_STRIP
    bool "Enable WS2812-based LED strips"
    depends on ZMK_RGB_BACKLIGHT
    default y

config WS2812_LED_COUNT
    int "Number of WS2812 LEDs"
    depends on WS2812_STRIP
    default 32

endif # SHIELD_SK8KEY
